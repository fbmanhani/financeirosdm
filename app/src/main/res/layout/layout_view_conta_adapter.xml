<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewContaBanco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banco"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewContaNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewContaBanco"
                android:layout_marginTop="5dp"
                android:text="1123123-1" />


            <TextView
                android:id="@+id/textViewContaSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewContaBanco"
                android:layout_alignEnd="@id/textViewContaNumero"
                android:layout_marginTop="5dp"
                android:text="R$0,00"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
