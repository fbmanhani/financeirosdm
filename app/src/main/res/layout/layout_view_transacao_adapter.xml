<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewTipoTransacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo Transacao"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewDescricaoTransacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTipoTransacao"
                android:layout_marginTop="5dp"
                android:text="13.3 Inch, 256 GB" />


            <TextView
                android:id="@+id/textViewConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDescricaoTransacao"
                android:layout_alignStart="@id/textViewDescricaoTransacao"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imageView"
                android:text="INR 56990"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewValorTransacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDescricaoTransacao"
                android:layout_alignEnd="@id/textViewDescricaoTransacao"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="INR 56990"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
