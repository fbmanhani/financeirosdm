<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conta"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textViewConta"
                android:gravity="end"
                android:text="Data"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewTipoTransacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewConta"
                android:text="Tipo Transacao"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/textViewDescricaoTransacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTipoTransacao"
                android:layout_marginTop="5dp"
                android:text="13.3 Inch, 256 GB" />


            <TextView
                android:id="@+id/textViewValorTransacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTipoTransacao"
                android:layout_alignEnd="@id/textViewDescricaoTransacao"
                android:layout_marginTop="5dp"
                android:text="R$000.000"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
